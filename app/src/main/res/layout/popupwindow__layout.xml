<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popupwindow_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
    android:background="#ab2fc4"
    android:padding="2dp"
    android:visibility="visible">

    <ImageButton
        android:id="@+id/closeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/closebutton"
        android:tint="@android:color/black"
        android:visibility="visible"
        android:src="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageView
        android:id="@+id/takePhoto"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/closeBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="53dp"
        android:adjustViewBounds="true"
        android:background="@android:color/black"
        android:clickable="true"
        android:contentDescription="@string/takephoto"
        android:focusable="true"
        android:scaleType="fitXY"
        android:src="@android:drawable/ic_menu_camera"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editTitel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editDescription"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/titel" />

    <EditText
        android:id="@+id/editDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editArt"
        android:layout_alignStart="@+id/editTitel"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:text="@string/description" />

    <EditText
        android:id="@+id/editArt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/okBtn"
        android:layout_alignStart="@+id/editDescription"
        android:ems="10"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:text="@string/art" />

    <TextView
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editArt"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="27dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/ok"
        tools:text="@string/ok" />
</RelativeLayout>